@model Leav_management.Models.EditLeaveAllocationVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editing @Model.LeaveType.Name Allocatin for @Model.Employee.FirstName @Model.Employee.LastName </h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <input type="hidden" asp-for="EmployeeId" class="form-control" />
            <div class="form-group">
                <label asp-for="NumberOfDayes" class="control-label"></label>
                <input asp-for="NumberOfDayes" class="form-control" />
                <span asp-validation-for="NumberOfDayes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary btn-block" asp-action="Details" asp-route-id="@Model.EmployeeId">Back to Deails</a>
</div>

